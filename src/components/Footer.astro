const today = new Date();
---

<footer>
	&copy; {today.getFullYear()} Bobo 版权所有.
	<div class="social-links">
		<a href="https://space.bilibili.com/1246394069" target="_blank">
			<img src="https://bobo.us.kg/favicon.ico" alt="B站" title="B站个人空间"/>
